<html>

<head>
  <title>Battle!</title>
  <link rel="stylesheet" href="./style.css">
</head>

<body>
  <h1>	<%= @player_1 %> vs. <%= @player_2 %> </h1>
  <div class="player">
    <h3><%= @player_1 %> 100</h3>
    <form action="/attack" method="post">
      <button type="submit" name="target" value="player2">Attack Player 2</button>
    </form>
  </div>
  <div class="player">
    <h3><%= @player_2 %> 100</h3>
    <form action="/attack" method="post">
      <button type="submit" name="target" value="player1">Attack Player 1</button>
    </form>
  </div>
  <em><%= @status %></em>
</body>

</html>
